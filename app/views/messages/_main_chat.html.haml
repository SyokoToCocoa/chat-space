.chat-main
  .chat-main__header
    .chat-main__header-left
      .chat-main__header-left__group
        = @group.name
      .chat-main__header-left__member
        MemberList:
        - @members.each do |member|
          = member.name
    .chat-main__header-right
      .chat-main__header-right__edit
        = link_to edit_group_url(@group) do
          Edit
  .chat-main__message
    = render @messages 
  .chat-main__form
    = form_for [@group, @message] do |f|
      .chat-main__form__box
        .chat-main__form__box__text
          = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .chat-main__form__box__icon
          = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
        .chat-main__form__box__sent
          = f.submit 'Send', class: 'chat-main__form__sent'

